@model _5_CreatingValidation.Models.Person

<h2>Введите данные пользователя:</h2>
<form method="post">
    <div>
        <p>
            <label asp-for="Name">Введите имя пользователя: </label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </p>
        <p>
            <label asp-for="Email">Введите Email пользователя: </label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </p>
        <p>
            <label asp-for="Password">Введите пароль пользователя: </label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <label asp-for="Age">Введите возраст пользователя: </label>
            <input asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </p>
        <p>
            <button>Отправить</button>
        </p>
        <div asp-validation-summary=ModelOnly></div>
    </div>
</form>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>